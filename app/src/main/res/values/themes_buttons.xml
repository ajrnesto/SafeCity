<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SafeCity.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconTint">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SafeCity.Button.Panel" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAlignment">textStart</item>
        <item name="backgroundTint">?colorOnPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="SafeCity.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="SafeCity.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="colorPrimary">?colorPrimary</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="SafeCity.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">?colorSecondaryVariant</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconTint">?colorOnSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SafeCity.Button.Floating.Extended" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="iconTint">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="SafeCity.Button.Floating.Extended.Tonal" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">?colorSecondaryVariant</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="SafeCity.Button.Floating.Extended.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="SafeCity.Button.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumbTint">@color/selector_switch_material</item>
    </style>

    <style name="SafeCity.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
</resources>