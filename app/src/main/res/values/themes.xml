<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeCity" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_caicos_turquoise</item>
        <item name="colorPrimaryVariant">@color/blue_caicos_turquoise</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_surface</item>
        <item name="colorSecondaryVariant">@color/blue_surface</item>
        <item name="colorOnSecondary">?colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/gray</item>
        <!-- Customize your theme here.
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> -->
        <item name="colorSurface">@color/white</item>
        <item name="colorAccent">@color/blue_caicos_turquoise</item>
    </style>

    <style name="BottomNavBar">
        <item name="colorSecondaryContainer">?colorSecondary</item>
    </style>
</resources>